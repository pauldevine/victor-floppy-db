# Django Settings
# SECURITY WARNING: Generate a strong secret key for production!
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-replace-in-production

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated list
# Example: ALLOWED_HOSTS=example.com,www.example.com,localhost
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=victordisk
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Application Settings
# Path to disk mustering area (where floppy disk files are stored)
# Example: /home/user/victor-disks or C:\Victor9k\Disk Mustering Area
DISK_MUSTERING_DIR=/path/to/disk/mustering/area

# Django Project Path (optional - used by scripts)
# If not set, scripts will try to auto-detect
# DJANGO_PROJECT_PATH=/path/to/victordisk
